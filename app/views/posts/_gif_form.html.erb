<%= form_for(@post) do |f| %>
  <div class="gif-form">
    <%= f.hidden_field :type, value: 'gif' %>
    <%= f.file_field :image %>
    <%= f.text_area :content, rows: 2 %>
  </div>
  <div class="actions">
    <%= f.submit "Submit GIF", class: "submit-button btn btn-primary btn-large" %>
  </div>
<% end %>
