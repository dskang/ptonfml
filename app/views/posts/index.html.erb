<% if notice %>
<div class="notice well span6">
  <%= notice %>
</div>
<% end %>

<div class="form">
  <%= render 'form' %>
</div>

<div class="posts">
<% @posts.each do |post| %>
  <div class="post">
    <div class="content span6 well">
      <%= post.content %>
    </div>
      <div class="meta span2">
        <%= post.created_at.strftime("%I:%M%p on %m/%d/%Y") %>
      </div>
    <div class="vote span2">
      <a class="like btn btn-success" data-target="<%= post.to_param %>">
        <span class="count"><%= post.likes %></span>
        <i class="icon-thumbs-up"></i>
      </a>
      <a class="dislike btn btn-danger" data-target="<%= post.to_param %>">
        <span class="count"><%= post.dislikes %></span>
        <i class="icon-thumbs-down"></i>
      </a>
    </div>
    <div class="span2">
      <% post_disqus_path = post_path(post) + '#disqus_thread' %>
      <%= link_to 'Comments', post_disqus_path, class: 'comments-link' %>
    </div>
  </div>
<% end %>
</div>

<script type="text/javascript">
  var disqus_shortname = 'ptonfml';
  var disqus_developer = 1; // FIXME

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function () {
  var s = document.createElement('script'); s.async = true;
  s.type = 'text/javascript';
  s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
  (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
  }());
</script>
