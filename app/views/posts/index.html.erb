<div class="form">
  <%= render 'form' %>
</div>
<div class="posts">
<% @posts.each do |post| %>
  <div class="post">
    <div class="content span8 well">
      <%= post.content %>
    </div>
    <div class="vote span2">
      <a class="like btn btn-success">
        <%= post.likes %>
        <i class="icon-thumbs-up"></i>
      </a>
      <a class="dislike btn btn-danger">
        <%= post.dislikes %>
        <i class="icon-thumbs-down"></i>
      </a>
    </div>
    <div class="span2">
      <%= link_to 'Comments', post %>
    </div>
  </div>
<% end %>
</div>

