<p id="notice"><%= notice %></p>

<div class="post span8 well" data-target="<%= @post.to_param %>">
  <div class="row">
    <div class="content span6 well">
      <%= @post.content %>
    </div>
    <div class="span2">
      <div class="meta center">
        <%= link_to @post.created_at.strftime("%I:%M%p on %m/%d/%Y"), post_path(@post), class: 'timestamp' %>
        <div class="vote">
          <% if @votes.include? @post.id %>
          <a class="like btn btn-success disabled">
          <% else %>
          <a class="like btn btn-success">
          <% end %>
            <span class="count"><%= @post.likes %></span>
            <i class="icon-thumbs-up"></i>
          </a>
          <% if @votes.include? @post.id %>
          <a class="dislike btn btn-danger disabled">
          <% else %>
          <a class="dislike btn btn-danger">
          <% end %>
            <span class="count"><%= @post.dislikes %></span>
            <i class="icon-thumbs-down"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="span8">
        <ul class="comments">
          <% unless @post.comments.empty? %>
            <%= render partial: 'comments/comment', collection: @post.comments %>
          <% end %>
          <%= render partial: 'comments/form', locals: { post: @post } %>
          <%= link_to 'Back', root_url %>
        </ul>
      </div>
  </div>
</div>
