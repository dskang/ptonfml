<% if notice %>
<div class="notice well span6">
  <%= notice %>
</div>
<% end %>

<table class="table" style="background-color: #FFF">
  <thead>
    <tr>
      <th class="span1">Approved</th>
      <th class="span1">ID</th>
      <th class="span4">Content</th>
      <th class="span2">Created at</th>
      <th class="span2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <% if post.approved %>
      <tr class="approved">
          <td><i class="icon-ok"></i></td>
        <% else %>
      <tr class="unapproved">
          <td><i class="icon-remove"></i></td>
        <% end %>
        <td><%= link_to post.id, post_path(post) %></td>
        <td><%= post.content %></td>
        <td><%= l post.created_at %></td>
        <td>
          <!-- FIXME: Add edit path once our app is secure -->
          <%= link_to 'Destroy', post_path(post),
                      method: :delete,
                      confirm: 'Are you sure?',
                      class: 'btn btn-danger' %>
          <%= link_to 'Approve', post_path(post) + '/approve', class: 'btn btn-primary', method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
