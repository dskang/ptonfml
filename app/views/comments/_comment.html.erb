<li class="comment-container" data-target="<%= comment.id %>">
  <div class="comment">
    <% if is_admin? %>
      <%= link_to 'x', comment_path(comment),
          method: :delete,
          confirm: 'Are you sure?',
          class: 'close' %>
    <% end %>
    <span class="name <%= 'mod' if admin_names.include? comment.name %>">
      <strong><%= comment.name %></strong>
    </span>
    <span class="timestamp">
      <%= time_ago_in_words comment.created_at %> ago
    </span>
    <a class="comment-comment pull-right">Reply</a>
    <div class="body">
      <%= sanitize comment.body.gsub(/\n/, '<br>') %>
    </div>
  </div>
  <ul class="comments">
  <% unless comment.comments.empty? %>
    <%= render partial: 'comments/comment', collection: comment.comments %>
  <% end %>
  </ul>
</li>
